# Example environment file for OpenTelemetry Collector with Dynatrace
# Copy this file to .env and fill in your actual values

# ========================================
# DYNATRACE CONFIGURATION (REQUIRED)
# ========================================

# Dynatrace API endpoint for metrics v2
# Format: https://{your-environment-id}.live.dynatrace.com/api/v2/metrics/query
DYNATRACE_API_ENDPOINT=https://abc12345.live.dynatrace.com/api/v2/metrics/query

# Dynatrace API token with metrics.read permission
# Generate at: Settings > Integration > Dynatrace API > Generate token
DYNATRACE_API_TOKEN=dt0c01.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ========================================
# DEPLOYMENT CONFIGURATION (OPTIONAL)
# ========================================

# Environment identifier (dev, stage, prod)
DEPLOYMENT_ENVIRONMENT=production

# Kubernetes cluster name (if applicable)
CLUSTER_NAME=my-k8s-cluster

# ========================================
# OTLP EXPORT CONFIGURATION (OPTIONAL)
# ========================================

# OTLP endpoint for forwarding metrics
OTLP_ENDPOINT=https://api.honeycomb.io

# OTLP authentication token
OTLP_TOKEN=your-otlp-token

# OTLP insecure connection (true/false)
OTLP_INSECURE=false

# ========================================
# KAFKA CONFIGURATION (OPTIONAL)
# ========================================

# Kafka brokers (comma-separated)
KAFKA_BROKERS=kafka1:9092,kafka2:9092

# Kafka authentication
KAFKA_USERNAME=your-kafka-username
KAFKA_PASSWORD=your-kafka-password

# ========================================
# AWS CONFIGURATION (FOR ECR DEPLOYMENT)
# ========================================

# AWS region for ECR
AWS_DEFAULT_REGION=us-east-1

# ECR registry URL
AWS_ECR_REGISTRY=123456789012.dkr.ecr.us-east-1.amazonaws.com

# ========================================
# ECS CONFIGURATION (OPTIONAL)
# ========================================

# ECS cluster name for auto-deployment
ECS_CLUSTER_NAME=my-ecs-cluster

# ECS service name for auto-deployment
ECS_SERVICE_NAME=otelcol-dynatrace-service